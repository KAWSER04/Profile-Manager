<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectTime">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <EditText
                android:id="@+id/etname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"
                />


            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/startTimeButton"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:text="start"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/startTimeView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:hint="HH:MM"
                    android:paddingLeft="2dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/endtTimeButton"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:text="end"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/endTimeView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:hint="HH:MM"
                    android:paddingLeft="2dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Repetation :"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:paddingBottom="10dp" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="60dp"
                android:layout_marginBottom="10dp">

                <Switch
                    android:id="@+id/saturday"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Saturday" />


                <Switch
                    android:id="@+id/sunday"
                    android:layout_marginLeft="10dp"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:text="Sunday" />
                <Switch
                    android:id="@+id/monday"
                    android:layout_marginLeft="10dp"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:text="Monday"
                    />
                <Switch
                    android:id="@+id/tuesday"
                    android:layout_marginLeft="10dp"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:text="Tuesday"
                    />
                <Switch
                    android:id="@+id/wednesday"
                    android:layout_marginLeft="10dp"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:text="Wednesday"
                    />
                <Switch
                    android:id="@+id/thursday"
                    android:layout_marginLeft="10dp"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:text="Thursday"
                    />
                <Switch
                    android:id="@+id/friday"
                    android:layout_marginLeft="10dp"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:text="Friday"
                    />

            </LinearLayout>

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mode Selection :"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="10dp"
                    />

                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/listDivider" />

                <RadioGroup
                    android:id="@+id/radioGroupp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">

                    <RadioButton
                        android:id="@+id/silent"
                        android:text="Silent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <RadioButton
                        android:id="@+id/vibrate"
                        android:text="Vibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RadioGroup>

            </LinearLayout>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:background="#03A898"
                android:layout_marginBottom="6dp"
                android:layout_gravity="end|bottom" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>